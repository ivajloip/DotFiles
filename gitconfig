[alias]
  br = branch
  ca = commit -a
  ci = commit
  cm = commit --amend
  co = checkout
  dt = difftool -g
  ff = merge --ff-only @{u}
  nb = checkout -b
  pullsm = submodule update --recursive --remote
  rb = rebase
  st = status
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lb = log --graph --simplify-by-decoration --pretty=format:'%d' --all
  last = log -n 5 --pretty='format:%h %an <%aE> %aI %s'

[apply]
  whitespace=fix

[branch]
  autosetuprebase = always

[color]
  ui = auto

[core]
  whitespace = -indent-with-non-tab, trailing-space, -cr-at-eol, space-before-tab
  logallrefupdates = true
  editor = /usr/bin/env vim

[credential]
  helper = /usr/local/bin/git-credential-gnome-keyring

[diff]
  tool = vimdiff
  guitool = meld
  renames = 5

[github]
  user = ivajloip

[merge]
  ff = only
  tool = vimdiff
  guitool = meld

[mergetool]
  prompt = false

[user]
	name = Ivaylo Petrov
	email = ivajloip@gmail.com

[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/

[url "git@github.com:"]
	insteadOf = https://github.com/
